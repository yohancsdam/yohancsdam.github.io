<div class="grid-item">
    <slot />
  </div>
  
  <style>
    .grid-item {
      background: #fff;
      border-radius: 10px;
      padding: 1.5rem;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
      transition: transform 0.3s ease;
    }
  
    .grid-item:hover {
      transform: translateY(-5px);
    }
  
    .grid-item img {
      width: 100%;
      height: auto;
      border-radius: 8px;
      margin-bottom: 1rem;
    }
  
    .grid-item h3 {
      margin: 0 0 1rem;
      color: #333;
      font-size: 1.5rem;
    }
  
    .grid-item p {
      color: #666;
      line-height: 1.6;
      margin: 0;
    }
  </style>