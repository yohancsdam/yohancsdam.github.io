---

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/hero.astro';
import Grid from '../components/Grid.astro';
import GridItem from '../components/GridItem.astro';
const menuItems = [
  {
    title: "Pasta & Spaghetti",
    image: '/logo.svg',
    description: "Authentic Italian pasta with fresh ingredients..."
  },
  {
    title: "Seafood Special",
    image: '/logo.svg',
    description: "Daily caught seafood prepared with Mediterranean flavors..."
  },
  {
    title: "Classic Spaghetti",
    image: '/logo.svg',
    description: "Traditional recipe passed down through generations..."
  }
];
---

<Layout>
    <Hero>
        <div slot="left">
          <h1 style="font-size: clamp(1.5rem, 4vw, 2.5rem)">Modern Web Solutions</h1>
          <p style="font-size: clamp(1rem, 2vw, 1.25rem)">Build faster with our intuitive platform</p>
          <button>Start Free nut</button>
        </div>
      
        <div slot="right">
          <img 
            src="/logo.svg" 
            alt="Platform interface showcase" 
            loading="lazy"
            width="200" 
            height="125"
          >
        </div>
    </Hero>
    <Grid>
        {menuItems.map(item => (
            <GridItem>
                <img 
                src={item.image} 
                alt={item.title} 
                width="100" 
                height="75"
                loading="lazy"
                />
                <h3>{item.title}</h3>
                <p>{item.description}</p>
            </GridItem>
        ))}
    </Grid>
</Layout>
