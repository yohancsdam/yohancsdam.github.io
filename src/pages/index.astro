---

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/hero.astro';
import Grid from '../components/Grid.astro';
import GridItem from '../components/GridItem.astro';
import Section from '../components/Section.astro';
const menuItems = [
  {
    title: "Pasta & Spaghetti",
    image: '/logo.svg',
    description: "Authentic Italian pasta with fresh ingredients..."
  },
  {
    title: "Seafood Special",
    image: '/logo.svg',
    description: "Daily caught seafood prepared with Mediterranean flavors..."
  },
  {
    title: "Classic Spaghetti",
    image: '/logo.svg',
    description: "Traditional recipe passed down through generations..."
  }
];
---

<Layout>
    <Section id="hero" contain={true}>
        <Hero>
            <div slot="left">
            <h1>Modern Web Solutions</h1>
            <p>Build faster with our intuitive platform</p>
            <button>Start Free nut</button>
            </div>
        
            <div slot="right">
            <img 
                src="/logo.svg" 
                alt="Platform interface showcase" 
                loading="lazy"
                width="200" 
                height="125"
            >
            </div>
        </Hero>
    </Section>
    <Grid>
        {menuItems.map(item => (
            <GridItem>
                <img 
                src={item.image} 
                alt={item.title} 
                width="100" 
                height="75"
                loading="lazy"
                />
                <h3>{item.title}</h3>
                <p>{item.description}</p>
            </GridItem>
        ))}
    </Grid>
</Layout>
